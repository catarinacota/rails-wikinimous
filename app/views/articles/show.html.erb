<div>

  <h3>
    <%= @article.title %>

    <%= link_to edit_article_path do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>

    <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>

  </h3>

  <p><%= @article.content %></p>

</div>

