<div class="main main-show">

  <h2>
    <%= @article.title %>

    <small>
      <%= link_to edit_article_path do %>
        <i class="fas fa-pencil-alt fa-xs"></i>
      <% end %>

      <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt fa-xs"></i>
      <% end %>
    </small>

  </h2>

  <hr/>

  <p><%= @article.content %></p>

</div>

