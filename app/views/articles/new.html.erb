<div class="main">

  <h1>New Article</h1>

  <%= form_for(@article) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-outline-secondary' %>
  <% end %>


<p>
  <%= link_to 'Back', articles_path %>
</p>

</div>

